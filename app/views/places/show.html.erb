<section class="place-screen">
    <div class="text-white">
    <%= render 'shared/header'%>
    </div>
    <div class="container place-name">
        <h1><%= @place.title %> </h1>
    </div>
</section>

<section class="pg-cards">
    <div class="container">
        <div class="row align-items-start" >
            <div class="col">
                <div class="card" style="width: 35rem;">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                            <img class="d-block w-100 card" src="https://www.bachmann.com/fileadmin/03_Anwendungswelten/Office/BACHMANN_Anwendungswelt_Office_Header_mobil.jpg" alt="First slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                        </div>
                </div>
            </div>
            <div class="col">
                        <div class="col">
                            <div class="row">
                                <div class="card text-white" style="width: 30rem;">
                                    <div class="card-body">
                                        <h5 class="card-title card-description"> Price starts from<br> <big><%= @place.price %>$</big><small> per month</small></h5>
                                        <p class="card-text card-description"><%= @place.description %></p>
                                        <a href="#" class="btn btn-success">Quick book</a>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div classe="card" style="width: 30rem;">
                                    <img class=" card card-img-top" src="https://live.staticflickr.com/65535/51214325708_f46c98e18f_b.jpg">
                                </div>
                            </div>
            </div>
        </div>
    </div>
</section>
<%= render'shared/footer' %>