<section class="place-screen">
    <%= render 'shared/header'%>
    <div class="container place-name">
        <h1><%= @place.title %> </h1>
    </div>
</section>

<section class="pg-cards">
    <div class="container ">
        <div class="row align-items-start" >
            <div class="col">
                <div class="card" style="width: 35rem;">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                            <img class="d-block w-100 card" src="https://i.pinimg.com/originals/9d/6c/72/9d6c72a2af258a47062fe7f77b4e622d.jpg" alt="First slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                        </div>
                </div>
            </div>
            <div class="col">
                    <div class="row">
                        <div class="col">
                            <div class="row">
                                <div class="card text-white" style="width: 30rem;">
                                    <div class="card-body">
                                        <h5 class="card-title card-description"> Price from<br> <big><%= @place.price %>$</big><small> per month</small></h5>
                                        <p class="card-text card-description"><%= @place.description %></p>
                                        <a href="#" class="btn btn-success">Quick book</a>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="card pt-10" style="width: 30rem;">
                                    <div class="card-body">
                                        
                                    </div>
                                </div>
                            </div>
                    </div>
            </div>
        </div>
    </div>
</section>